{
  "compilerOptions": {
    "target": "es2016",                                 
    "module": "commonjs",                               
    "moduleResolution": "node",
    "outDir": "./dist",                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": false,                                      
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}